{
    "compileOnSave": false,
    "compilerOptions": {
        "skipLibCheck": true,
        "baseUrl": "./",
        "importHelpers": true,
        "module": "es2020",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "target": "ES2022",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "useDefineForClassFields": false
    }
}
